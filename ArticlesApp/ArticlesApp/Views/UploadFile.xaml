<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArticlesApp.Views.UploadFile" NavigationPage.IconColor="Black" BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout Spacing="50" Padding="7,0,7,0">
            <Label Text="press the button to upload the article file" Margin="0,0,0,-20" Padding="8,0,0,0"
                TextColor="#12121D" FontSize="25" FontAttributes="Bold" FontFamily="Roboto" />
            <Button Command="{Binding PickPDFCommand}"  TextColor="#F8FBFF"  Text="Next"
                    BackgroundColor ="#2934D0"  CornerRadius="29"
                    FontFamily="Rubik" FontSize="15" HeightRequest="54" 
                    VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" 
                    WidthRequest="350"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>