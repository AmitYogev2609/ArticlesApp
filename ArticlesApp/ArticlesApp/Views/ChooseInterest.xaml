<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArticlesApp.Views.ChooseInterest" NavigationPage.IconColor="Black">
    <ContentPage.Content>
        <StackLayout Spacing="25" Padding="0,0,0,20" BackgroundColor="White">
            <StackLayout Padding="25,0,0,0" BackgroundColor="White">
                <Label Text="choose your intrest" TextColor="#12121D" FontSize="25" FontAttributes="Bold" FontFamily="Roboto"/>
                <Label Text="press the image icon" FontSize="Body"   FontFamily="Roboto"/>
            </StackLayout>
            <ScrollView >
                <CollectionView ItemsSource="{Binding Interests}" x:Name="list" FlowDirection="LeftToRight" >
                    <CollectionView.ItemsLayout  >
                        <LinearItemsLayout ItemSpacing="8" Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate >
                        <DataTemplate>
                            <Frame CornerRadius="30" BorderColor="Black" >
                                <Label Text="{Binding InterestName }" TextColor="Red"/>
                            </Frame>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    
                </CollectionView>
            </ScrollView>
            <Button  TextColor="#F8FBFF"  Text="Next" BackgroundColor ="#2934D0"  CornerRadius="29"
                    FontFamily="Rubik" FontSize="15" HeightRequest="54"  VerticalOptions="EndAndExpand" HorizontalOptions="CenterAndExpand" WidthRequest="350"  />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>