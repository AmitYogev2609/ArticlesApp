<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArticlesApp.Page1"
                          xmlns:fontawesome="clr-namespace:ArticlesApp.Fonts"
                          xmlns:local="clr-namespace:ArticlesApp.Renderer">
    <ContentPage.Content>
        <StackLayout >
            <CollectionView x:Name="test">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="30" BorderColor="Black">
                        <Label Text="{Binding InterestName }"/>
                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>

            </CollectionView>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>