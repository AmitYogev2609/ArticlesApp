<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArticlesApp.Page1"
                        
              xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">
    <ContentPage.Content>
        <StackLayout Padding="25" >

            <yummy:PancakeView CornerRadius="60,60,60,60" Border="{yummy:BorderMarkup Color=#000000, Thickness='2'}" 
                               HeightRequest="30"  HorizontalOptions="CenterAndExpand" WidthRequest="200" BackgroundColor="Blue">

                <Label  Text="Machine learning" TextColor="Black"   VerticalOptions="Center" 
                                        HorizontalOptions="CenterAndExpand" FontSize="20" />

            </yummy:PancakeView>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>